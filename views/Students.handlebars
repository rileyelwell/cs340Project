<html>
  <main>

    <div class="searchContainer">
      <form id='searchStudents' action='' method='' onkeydown="return event.key != 'Enter';">
        <label> Search Students by First Name</label>
        <input id='studentSearch' type='text' name='studentSearch' value=''>
        <input type="button" id = 'searchButton' value="Search" onclick="searchStudentsFirstName();">
        <button><a href="/Students">Reset</a></button>
      </form>
    </div>

    <table class="styled-table">
      <thead>
        <tr>
          <th>First Name</th> 
          <th>Last Name</th> 
          <th>GPA</th>
          <th>Email</th>
          <th>College</th>
          <th>Gender</th>
          <th>Year in School</th>
          <th>Budget</th>
          <th>Classes Need Help In</th>
        </tr>
      </thead>
        {{#each Students}} 
          <tr> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td>
            <td>{{gpa}}</td> 
            <td>{{email}}</td> 
            <td>{{college}}</td> 
            <td>{{gender}}</td>  
            <td>{{yearInSchool}}</td>
            <td>{{tutoringBudget}}</td> 
            <td>{{classesHelpNeededIn}}</td>
            <td><button onclick="deleteStudent({{studentID}})">Delete</button></td>
            <td><button><a href="/Students/{{studentID}}">Update</a></button></td>
          </tr> 
        {{/each}} 
    </table>

    <div class="addContainerTitle">
      <h3>Add a new student</h3>
      <div class="addContainer">
        <form class="form-inline" action="/Students" method="post">

          <label for="firstName">First Name</label>
          <input type="text" name="firstName">

          <label for="lastName">Last Name</label>
          <input type="text" name="lastName">

          <label for="gpa">GPA</label>
          <input type="number" name="gpa">

          <label for="email">Email</label>
          <input type="text" name="email">

          <label for="college">College </label>
          <input type="text" name="college">

          <label for="gender">Gender</label>
          <input type="text" name="gender">

          <label for="yearInSchool">Year in School</label>
          <input type="number" name="yearInSchool">

          <label for="tutoringBudget">Tutoring Budget</label>
          <input type="number" name="tutoringBudget">

          <label for="classesHelpNeededIn">Classes Need Help In</label>
          <input type="text" name="classesHelpNeededIn">

          <input type="submit" id="submitButton" value="Submit">
        </form>
      </div>
    </div>

  </main>
</html>