<html>
  <main>

    <div class="searchContainer">
      <form id='searchColleges' action='' method='' onkeydown="return event.key != 'Enter';">
        <label> Search Colleges by Address</label>
        <input id='collegeSearch' type='text' name='collegeSearch' value=''>
        <input type="button" id = 'searchButton' value="Search" onclick="searchColleges();">
        <button><a href="/Colleges">Reset</a></button>
      </form>
    </div>

    <table class="styled-table">
      <thead>
        <tr>
          <th>Address</th> 
          <th>Tuition</th> 
          <th>Ranking</th>
        </tr>
      </thead>
        {{#each Colleges}} 
          <tr> 
            <td>{{address}}</td> 
            <td>{{tuition}}</td>
            <td>{{ranking}}</td> 
            <td><button onclick="deleteCollege({{collegeID}})">Delete</button></td>
            <td><button><a href="/Colleges/{{collegeID}}">Update</a></button></td>
          </tr> 
        {{/each}}  
    </table>

    <div class="addContainerTitle">
      <h3>Add a new college</h3>
      <div class="addContainer">
        <form class="form-inline" action="/Colleges" method="post">

          <label for="address">Address</label>
          <input type="text" name="address" placeholder="12345 Main Street">

          <label for="tuition">Tuition</label>
          <input type="number" name="tuition" placeholder="40000">

          <label for="ranking">Ranking</label>
          <input type="number" name="ranking" placeholder="42">
          
          <input type="submit" id="submitButton" value="Submit">
        </form>
      </div>
    </div>

  </main>
</html>