<html>
  <main>

    <div class="outerContainer">
      <div class="addContainer">
        <form id='searchTutors' class="form-inline" action='' method='' onkeydown="return event.key != 'Enter';">
          <label> Search Tutors by First Name</label>
          <input id='tutorSearch' type='text' name='tutorSearch' value=''>
          <input type="button" id="styledButton" value="Search" onclick="searchTutorsFirstName();">
          <button id="styledButton"><a href="/Tutors">Reset</a></button>
        </form>
      </div>
    </div>

    <table class="styled-table">
      <thead>
        <tr>
          <th>First Name</th> 
          <th>Last Name</th> 
          <th>Email</th>
          <th>Affiliated Colleges</th>
          <th>Gender</th>
          <th>Age</th>
          <th>Hourly Rate</th>
          <th>Class Expertise</th>
          <th>Delete</th>
          <th>Update</th>
        </tr>
      </thead>
        {{#each Tutors}} 
          <tr> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td>
            <td>{{email}}</td> 
            <td>{{affiliatedColleges}}</td> 
            <td>{{gender}}</td> 
            <td>{{age}}</td>  
            <td>{{hourlyRate}}</td>
            <td>{{classExpertise}}</td> 
            <td><button id="styledButton" onclick="deleteTutor({{tutorID}})">Delete</button></td>
            <td><button id="styledButton"><a href="/Tutors/{{tutorID}}">Update</a></button></td>
          </tr> 
        {{/each}}  
    </table>

    <div class="outerContainer">
      <div class="addContainer">
        <h3>Add a New Tutor</h3>
        <form class="form-inline" action="/Tutors" method="post">

          <label for="firstName">First Name</label>
          <input type="text" name="firstName" placeholder="Joe">

          <label for="lastName">Last Name</label>
          <input type="text" name="lastName" placeholder="Smith">

          <label for="email">Email</label>
          <input type="text" name="email" placeholder="blank@gmail.com">

          <label for="affiliatedColleges">Affiliated Colleges</label>
          <input type="text" name="affiliatedColleges" placeholder="OSU, PSU">

          <label for="gender">Gender</label>
          <input type="text" name="gender" placeholder="Male/Female/Other">

          <label for="age">Age</label>
          <input class="numberInput" type="number" min="0" name="age" placeholder="20">

          <label for="hourlyRate">Hourly Rate</label>
          <input class="numberInput" type="number" step="0.01" min="0" name="hourlyRate" placeholder="15">

          <label for="classExpertise">Class Expertise</label>
          <input type="text" name="classExpertise" placeholder="English, Science">

          <input type="submit" id="styledButton" value="Submit">
        </form>
      </div>
    </div>
    
  </main>
</html>