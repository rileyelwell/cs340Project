<html>
    <main>
        <div class="outerContainer">
            <h2>Update {{Students.firstName}} {{Students.lastName}}</h2>
                <div class="addContainer">
                    <form class="form-inline" id="update-student" action="/Students" method="post">
                        <label for="firstName">First Name</label>
                        <input type="text" name="firstName" value="{{Students.firstName}}">

                        <label for="lastName">Last Name</label>
                        <input type="text" name="lastName" value="{{Students.lastName}}">

                        <label for="gpa">GPA</label>
                        <input type="number" name="gpa" value="{{Students.gpa}}">

                        <label for="email">Email</label>
                        <input type="text" name="email" value="{{Students.email}}">

                        <label for="college">College </label>
                        <input type="text" name="college" value="{{Students.college}}">

                        <label for="gender">Gender</label>
                        <input type="text" name="gender" value="{{Students.gender}}">

                        <label for="yearInSchool">Year in School</label>
                        <input type="number" name="yearInSchool" value="{{Students.yearInSchool}}">

                        <label for="tutoringBudget">Tutoring Budget</label>
                        <input type="number" name="tutoringBudget" value="{{Students.tutoringBudget}}">

                        <label for="classesHelpNeededIn">Classes Need Help In</label>
                        <input type="text" name="classesHelpNeededIn" value="{{Students.classesHelpNeededIn}}">
                    </form>
                    <button id="styledButton" onclick="updateStudent({{Students.studentID}})">Update</button>
                </div>
            </div>
        </div>
    </main>
</html>