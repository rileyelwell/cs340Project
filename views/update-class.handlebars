<html>
    <main>
        <div class="outerContainer">
            <h2>Update {{Classes.title}}</h2>
                <div class="addContainer">
                    <form class="form-inline" id="update-class" action="/Classes" method="post">
                        <label for="department">Department</label>
                        <input type="text" name="department" value="{{Classes.department}}">

                        <label for="campusBuilding">Campus Building</label>
                        <input type="text" name="campusBuilding" value="{{Classes.campusBuilding}}">

                        <label for="roomNumber">Room Number</label>
                        <input type="number" name="roomNumber" value="{{Classes.roomNumber}}">

                        <label for="title">Title</label>
                        <input type="text" name="title" value="{{Classes.title}}">
                    </form>
                    <button id="styledButton" onclick="updateClass({{Classes.classID}})">Update</button>
                </div>
            </div>
        </div>
    </main>
</html>